---
import type { HTMLAttributes } from "astro/types";

type Props = {
  date: Date;
} & HTMLAttributes<"time">;

const { date, class: className } = Astro.props;
---

<time datetime={date.toISOString()} class:list={[className]}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
