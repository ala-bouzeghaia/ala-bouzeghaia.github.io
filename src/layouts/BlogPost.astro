        <header
          class={css({
            marginBottom: "5rem",
            borderBottom: "1px solid",
            borderColor: "gray.400",
          })}>
          {
            heroImage && (
              <div
                class={css({
                  display: "block",
                  margin: "0 auto",
                  borderRadius: "1rem",
                  boxShadow: "cardShadow",
                  width: "800px",
                  height: "450px",
                  marginBottom: "1rem",
                })}>
                <img
                  class={css({
                    width: "100%",
                    height: "100%",
                    objectFit: "cover",
                    borderRadius: "1rem",
                  })}
                  src={heroImage}
                  alt={""}
                />
              </div>
            )
          }
          <FormattedDate date={pubDate} class={css({ color: "gray.500" })} />
          <h1
            class={css({
              fontSize: "6xl",
              fontWeight: "semibold",
              lineHeight: "tight",
              width: "100%",
              textWrap: "nowrap",
              //   whiteSpace: "normal",
              //   overflowWrap: "break-word",
              //   wordBreak: "break-word",
            })}>
            {title}
          </h1>
        </header>

